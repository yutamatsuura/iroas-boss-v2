# IROAS BOSS V2 - Vercel本番環境変数
# Vercel Environment Variables for Production

# ===================
# アプリケーション設定
# ===================
NODE_ENV=production
VITE_API_URL=https://iroas-boss-v2-backend.run.app
VITE_WS_URL=wss://iroas-boss-v2-backend.run.app
VITE_ENVIRONMENT=production
VITE_VERSION=2.0.0

# ===================
# MLM業務設定（要件定義書準拠）
# ===================
# 参加費設定（固定値）
VITE_HERO_PLAN_PRICE=10670
VITE_TEST_PLAN_PRICE=9800

# 最低支払金額（円）
VITE_MINIMUM_PAYOUT_AMOUNT=5000

# 報酬計算日（毎月25日）
VITE_REWARD_CALCULATION_DAY=25

# 会員数上限（新規募集なし）
VITE_MAX_MEMBERS=50

# ===================
# Univapay設定（本番）
# ===================
# フロントエンド表示用設定のみ（APIキーはバックエンドで管理）
VITE_UNIVAPAY_ENABLED=true
VITE_PAYMENT_METHODS=card,bank_transfer,bank_deposit,infocart

# ===================
# CSV設定
# ===================
# エンコーディング設定（Shift-JIS対応）
VITE_CSV_ENCODING=Shift-JIS
VITE_CSV_EXPORT_ENABLED=true

# ===================
# UI設定
# ===================
# エンタープライズテーマ（ネイビーブルー基調）
VITE_THEME=enterprise
VITE_PRIMARY_COLOR=#1e3a8a
VITE_SECONDARY_COLOR=#3b82f6

# ===================
# セキュリティ設定
# ===================
# セッション設定
VITE_SESSION_TIMEOUT=12
VITE_AUTO_LOGOUT_WARNING=5

# ===================
# 機能フラグ
# ===================
# 認証機能（Phase 21で有効化予定）
VITE_AUTH_ENABLED=false

# データインポート/エクスポート機能
VITE_DATA_MANAGEMENT_ENABLED=true

# 組織図手動調整機能
VITE_MANUAL_ORG_ADJUSTMENT=true

# 自動圧縮無効（要件定義書準拠）
VITE_AUTO_COMPRESSION=false

# ===================
# 監視・ログ設定
# ===================
VITE_ANALYTICS_ENABLED=true
VITE_ERROR_REPORTING=true
VITE_LOG_LEVEL=info

# ===================
# バックエンドAPI設定
# ===================
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3

# ===================
# ファイル処理設定
# ===================
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=csv,xlsx,json

# ===================
# 表示設定
# ===================
# ページサイズ（DataGrid）
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=200

# 日時フォーマット
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss
VITE_TIMEZONE=Asia/Tokyo

# ===================
# MLM固有設定
# ===================
# 7種類ボーナス表示制御
VITE_BONUS_TYPES=daily,title,referral,power,maintenance,sales_activity,royal_family

# 組織階層最大深度
VITE_MAX_ORG_DEPTH=10

# 29項目会員データフィールド完全対応フラグ
VITE_FULL_MEMBER_FIELDS=true